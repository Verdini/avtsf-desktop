<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Clientes">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <TableView fx:id="tblClients" minHeight="250.0" minWidth="300.0" prefHeight="250.0" prefWidth="300.0">
                    <columns>
                      <TableColumn fx:id="colClientId" minWidth="30.0" prefWidth="30.0" text="Id" />
                      <TableColumn fx:id="colClientName" minWidth="100.0" prefWidth="194.0" text="Nome" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button mnemonicParsing="false" text="Novo cliente" />
               </children>
            </VBox>
            <HBox spacing="10.0" style="-fx-border-color: Black;" HBox.hgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <StackPane style="-fx-border-color: Black;">
                           <children>
                              <ImageView fx:id="imgView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../asset/personIcon.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>
                        <Button fx:id="btnChangePhoto" mnemonicParsing="false" text="Mudar foto" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Nome" />
                        <TextField fx:id="tbxName" promptText="Nome Completo" />
                        <Label text="Data de nascimento">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                        <DatePicker fx:id="dtpBirth" promptText="Data de nascimento" />
                        <Label text="Telefone">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="tbxPhone" promptText="Telefone de contato" />
                        <Label text="E-mail">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="tbxEmail" promptText="E-mail de contato" />
                        <Button fx:id="btnSaveClient" mnemonicParsing="false" text="Salvar dados de cliente">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <Separator prefWidth="200.0" />
      <Label text="Treinos">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <children>
            <TableView fx:id="tblTraining" minHeight="200.0" minWidth="300.0" prefHeight="200.0" prefWidth="300.0">
              <columns>
                <TableColumn fx:id="colTrainingId" minWidth="30.0" prefWidth="30.0" text="Id" />
                <TableColumn fx:id="colTrainingDate" minWidth="120.0" prefWidth="120.0" text="Data" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
